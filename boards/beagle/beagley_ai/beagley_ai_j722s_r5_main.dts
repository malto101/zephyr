/dts-v1/;

#include <ti/j722s_r5_main.dtsi>
#include <zephyr/dt-bindings/pinctrl/ti-k3-pinctrl.h>
#include <freq.h>

/ {
	model = "BeagleY-AI";
	compatible = "beagle,beagley-ai";

	chosen {
		zephyr,sram = &ddr1;
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
	};

	cpus {
		cpu@0 {
			status = "okay";
		};
	};

	ddr0: memory@a2000000 {
		compatible = "mmio-sram";
		reg = <0xa2000000 DT_SIZE_M(1)>;
	};

	ddr1: memory@a2100000 {
		compatible = "zephyr,memory-region", "mmio-sram";
		reg = <0xa2100000 DT_SIZE_M(15)>;
		zephyr,memory-region = "DRAM";
	};
};

&pinctrl {
	uart1_rx_default: uart1_rx_default {
		pinmux = <K3_PINMUX(0x01ac, PIN_INPUT, MUX_MODE_2)>; /* (C27) MCASP0_AFSR.UART1_RXD */
	};

	uart1_tx_default: uart1_tx_default {
		pinmux = <K3_PINMUX(0x01b0, PIN_OUTPUT, MUX_MODE_2)>; /* (F24) MCASP0_ACLKR.UART1_TXD */
	};
};

&uart1 {
	status = "okay";
	pinctrl-0 = <&uart1_tx_default &uart1_rx_default>;
	pinctrl-names = "default";
	current-speed = <115200>;
};

&systick_timer {
	status = "okay";
};
